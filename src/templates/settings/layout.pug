doctype html
block html
  html(lang=lang)
    head
      block head
        - const domain = "https://codezei.github.io/whiteclean/build/"
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(name="theme-color" content=themeColor)
        title= pageTitle
        link(rel="stylesheet", href="css/style.min.css")
        link(rel="icon", href="img/favicon.ico", type="image/x-icon")
        
        meta(name="description", content=pageDescription)
        meta(name="keywords", content=pageKeywords)
        meta(name="robots", content="index, follow")

        meta(property="og:title", content=pageTitle)
        meta(property="og:description", content=pageDescription)
        meta(property="og:type", content="website")
        meta(property="og:url", content= domain + pageUrl)
        meta(property="og:image", content= domain + pageImage)

        meta(name="twitter:card", content="summary_large_image")
        meta(name="twitter:title", content=pageTitle)
        meta(name="twitter:description", content=pageDescription)
        meta(name="twitter:image", content= domain + twitterImage)

        block fonts
        //- script(src="js/beer-slider.js")
    body
      block content
      block scripts
        script(src="js/swiper-bundle.min.js")
        script(src="js/aos.js")
        script(src="js/beer-slider.js")
        script(src="js/lightgallery.min.js")
        script(src="js/main.js")